    <div class="card mb-3">
        <h3 class="card-header">{{ event.name }}
            <span class="badge bg-primary rounded-pill">{{ event.placeNumber }}</span></h3>
        <img src="{{ event.picture }}" alt="image {{ event.name }}">

        <div class="card-body">
            <p>{{ event.description }}</p>
            <a href="{{ path('event_show', {'event': event.id}) }}" class="card-link">DÃ©tails</a>
        </div>
        <div class="card-footer text-muted">
            {{ event.startedAt | date('d/m/Y') }} - {{ event.endedAt | date('d/m/Y') }}
        </div>
    </div>
</div>