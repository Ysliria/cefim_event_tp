{% extends 'base.html.twig' %}

{% block title %}{{ event.name }}{% endblock %}

{% block body %}
    <h1>{{ event.name }}</h1>

    <hr>

    <div class="row">
        <div class="col-3">
            <img src="{{ event.picture }}" alt="Image {{ event.name }}">
        </div>
        <div class="col-9">
            <p>
                {{ event.description }}
            </p>
        </div>
    </div>
{% endblock %}